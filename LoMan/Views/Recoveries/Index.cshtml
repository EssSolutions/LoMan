@model IEnumerable<LoMan.Models.Recoveries>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <h1>List Of Recoveries</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        <select id="month" class="form-control">
            <option value="0">Select Month</option>
            <option value="1">January</option>
            <option value="2">Febuary</option>
            <option value="3">March</option>
            <option value="4">April</option>
            <option value="5">May</option>
            <option value="6">June</option>
            <option value="7">July</option>
            <option value="8">August</option>
            <option value="9">September</option>
            <option value="10">October</option>
            <option value="11">November</option>
            <option value="12">December</option>
        </select>
    </div>
    <div class="col-md-2">
        <select id="year" class="form-control"></select>
    </div>
    <div class="col-md-2">
        <button class="btn btn-secondary form-control text-white" id="filterBtn" value="Filter" />
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <select id="searchType" class="form-control">
                <option value="">Select Search Type</option>
                <option value="name">Name</option>
                <option value="idate">Issue Date</option>                
            </select>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <input class="form-control" type="text" id="searchInput" placeholder="Enter Key To Search" />
        </div>
    </div>
</div>
<table class="table table-borderless bg-amy-crisp">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Principle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Interest)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="table-body">
        @foreach (var item in Model)
        {
            @if (!item.Name.Equals("Except"))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Principle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Interest)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@section Scripts {
    <script src="~/js/filter.js"></script>
}