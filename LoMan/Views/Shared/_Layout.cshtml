<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoMan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body class="bg-amy-crisp">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-sunny-morning  border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LoMan</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark " asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li>
                            <div class="dropdown">
                                <a class="nav-link text-dark dropdown-toggle"  role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Add New Loan
                                </a>
                                <div class="dropdown-menu bg-sunny-morning" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Monthly Interest</a>
                                    <a class="dropdown-item" href="#">Weekly Interest</a>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="dropdown">
                                <a class="nav-link text-dark dropdown-toggle"  role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    New Recovery
                                </a>
                                <div class="dropdown-menu bg-sunny-morning" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Principle Recovery</a>
                                    <a class="dropdown-item" href="#">Interest Recovery</a>
                                    <a class="dropdown-item" href="#">Whole Recovery</a>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="dropdown">
                                <a class="nav-link text-dark dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Lists
                                </a>
                                <div class="dropdown-menu bg-sunny-morning" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Pending Loans</a>
                                    <a class="dropdown-item" href="#">Recoveries</a>
                                    <a class="dropdown-item" href="#">All Loans</a>

                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="dropdown">
                                <a class="nav-link text-dark dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Admin Actions
                                </a>
                                <div class="dropdown-menu bg-sunny-morning" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Modify Loans</a>
                                    <a class="dropdown-item" href="#">Modify Recoveries</a>
                                    <a class="dropdown-item" href="#">Modify Analytics</a>

                                </div>
                            </div>
                        </li>                   
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
