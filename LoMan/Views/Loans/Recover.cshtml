@model LoMan.ViewModels.RecoveryVM

@{
    ViewData["Title"] = "Recover Loan";
}

<h1>Recovery</h1>

<h3>Are you sure you want to recover this Loan?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Asset)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Asset)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Principle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Principle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Interest)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Interest)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Rate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Rate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Idate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Idate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Rdate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Rdate)
        </dd>        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Times)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Times)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Period)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Period)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.loan.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.loan.Status)
        </dd>
    </dl>
    
    <form asp-action="Recover">
        <div class="row">
            <label class="col-md-2" asp-for="Type">Type</label>
            <select class="col-md-4" asp-for="Type">
                <option value="Interest">Interest</option>
                <option value="Principle">Principle</option>
                <option value="Complete">Complete</option>
            </select>
        </div>
        <div class="row">
            <label class="col-md-2" asp-for="Penalty">
                Penalty
            </label>
            <input class="col-md-4" type="number" asp-for="Penalty" value="0" />                        
        </div>
        
        <input type="hidden" asp-for="loan.Id" />
        <input type="submit" value="Recover" class="btn btn-secondary" />
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>
